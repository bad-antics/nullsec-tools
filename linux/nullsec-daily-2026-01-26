#!/bin/bash
# NullSec System Monitor - Generated 2026-01-26

while true; do
    clear
    echo "╔═══════════════════════════════════════════════════════════╗"
    echo "║   NullSec System Monitor - $(date '+%Y-%m-%d %H:%M:%S')          ║"
    echo "╚═══════════════════════════════════════════════════════════╝"
    echo ""
    
    # CPU
    cpu=$(top -bn1 | grep "Cpu(s)" | awk '{print $2}' | cut -d'%' -f1)
    echo "CPU Usage: ${cpu:-0}%"
    
    # Memory
    mem=$(free -m | awk 'NR==2{printf "%.1f%%", $3*100/$2}')
    echo "Memory: $mem"
    
    # Disk
    disk=$(df -h / | awk 'NR==2{print $5}')
    echo "Disk: $disk"
    
    # Load
    echo "Load: $(cat /proc/loadavg | cut -d' ' -f1-3)"
    
    # Top processes
    echo ""
    echo "Top Processes:"
    ps aux --sort=-%cpu | head -6 | tail -5 | awk '{printf "  %-8s %5s%% %s\n", $1, $3, $11}'
    
    # Network
    echo ""
    echo "Network I/O:"
    cat /proc/net/dev | grep -E "eth|wlan|enp|wlp" | head -2 | \
        awk '{printf "  %s RX: %.1f MB  TX: %.1f MB\n", $1, $2/1048576, $10/1048576}'
    
    sleep 2
done
